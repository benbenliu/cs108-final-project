<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stanford.cs108.bunnyworld.PlayModeStarter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:text="Have Fun In Your World"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/playNewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play New World"
            android:layout_gravity="center"
            android:onClick="goPlayMode"
            />

        <Button
            android:id="@+id/playOldButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Load Old World"
            android:onClick="goLoad"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Play Default World"
            android:onClick="goDefault"/>
    </LinearLayout>

</RelativeLayout>
